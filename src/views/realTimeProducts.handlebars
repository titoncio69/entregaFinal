<h1>Productos en Tiempo Real</h1>

<ul id="productsList"></ul>

<h3>Agregar Producto</h3>
<form id="productForm">
    <input type="text" name="title" placeholder="Nombre" required />
    <input type="text" name="description" placeholder="Descripción" />
    <input type="number" name="price" placeholder="Precio" required />
    <input type="text" name="category" placeholder="Categoría" required />
    <input type="text" name="code" placeholder="Código único" required />
    <button type="submit">Crear producto</button>
</form>

<script src="/socket.io/socket.io.js"></script>

<script>
    const socket = io();

    const productsList = document.getElementById("productsList");
    const form = document.getElementById("productForm");

    // Carga inicial recibida por socket desde el servidor
    socket.on("productsUpdated", (products) => {
        productsList.innerHTML = "";
        products.forEach(p => {
            const li = document.createElement("li");
            li.innerHTML = `
                <strong>${p.title}</strong> - $${p.price}
                <button onclick="deleteProduct('${p._id}')">Eliminar</button>
            `;
            productsList.appendChild(li);
        });
    });

    // Enviar producto desde el form vía socket
    form.addEventListener("submit", (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(form));
        socket.emit("newProduct", data);
        form.reset();
    });

    function deleteProduct(id) {
        socket.emit("deleteProduct", id);
    }
</script>
